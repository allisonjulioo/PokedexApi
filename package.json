{
  "name": "back-end",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "copy-schemas": "cpx **/*.graphql build/schema && cpx database/db.json build/database",
    "start": "node ./build/index.js",
    "build": "rimraf ./build && tsc -p . && yarn copy-schemas",
    "dev": "yarn build:dev",
    "format": "prettier-eslint --eslint-config-path ./.eslintrc --write '**/*.ts'",
    "lint": "eslint . --ext .ts",
    "build:dev": "nodemon 'index.ts' --exec 'ts-node' index.ts -e ts,graphql"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "yarn lint --fix",
      "yarn test:staged",
      "bash -c tsc --noEmit"
    ]
  },
  "engines": {
    "node": "16.18.1"
  },
  "dependencies": {
    "@apollo/server": "^4.3.0",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.15",
    "@types/graphql": "^14.5.0",
    "@types/graphql-depth-limit": "^1.1.3",
    "@types/node": "^17.0.21",
    "axios": "^0.26.1",
    "compression": "^1.7.4",
    "copyfiles": "^2.4.1",
    "cors": "^2.8.5",
    "cpx": "^1.5.0",
    "dotenv": "^16.0.0",
    "eslint-plugin-prettier": "^3.3.1",
    "express": "^4.17.3",
    "graphql": "^16.3.0",
    "graphql-import-node": "^0.0.5",
    "lint-staged": "^11.1.1",
    "ncp": "^2.0.0",
    "node-json-db": "^1.4.1",
    "nodemon": "^2.0.15",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "prettier-eslint": "^13.0.0",
    "prettier-eslint-cli": "^5.0.1"
  }
}
